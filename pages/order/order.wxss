/* pages/order/order.wxss */
.revice_address_row{
  width: 100%;
  background-color: lightgoldenrodyellow;
}
.user_info_row{
  display: flex;
  width: 100%;
  background-color: lightgoldenrodyellow;
  height: 150rpx;
  align-items: center;
/*   justify-content: center; */
  margin-left: 20rpx;
}
.user_info_row image{
  width: 52rpx;
  height: 58rpx;
}
.user_info_row .title{
  display: flex;
  flex-direction: column;
  flex: 2/5;
  padding: 20rpx;
}
.user_info_row .user_infos{
  display: flex;
  flex-direction: column;
  flex: 3/5;
  padding: 20rpx;
}
.divLine{
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
 }
 .shop{
   display: flex;
   height: 200rpx;
   margin-top: 5rpx;
   margin-bottom: 5rpx;
/*    margin-left: 10rpx;
   margin-right: 20rpx; */
   padding-left: 10rpx;
   padding-right: 10rpx;
   background-color: white;
   align-items: center;
 }
 .shop image{
   width: 150rpx;
   height: 150rpx;
   margin: 20rpx;
 }
 .shop .infos{
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
 }
 .shop .infos .name{
  font-weight: 600;
  font-size: 15px;
  margin-bottom: 30rpx;
 }
 .shop .infos .price{
  color: red;
  font-weight: 400;
  font-size: 11pt;
 }
 
 .shop .good_price {
  display: flex;
  flex-direction: column;
  flex: 3;
}
.shop .good_price .btn_box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.shop .good_price .btn_box image {
  width: 23px;
  height: 23px;
  border: 0;
  margin: 0;
}
.shop .good_price .btn {
  display: flex;
  flex-direction: row;
}
.shop .good_price .btn input {
  margin: 0;
  width: 40px;
  text-align: center;
  border: 1px solid #eee;
  font-size: 16px;
  height: 28px;
}
.shop .good_price .btn button {
  margin: 0;
}

 .poster{
  display: flex;
  width: 100%;
  background-color: white;
  height: 150rpx;
  align-items: center;
  padding-left: 10rpx;
  margin-bottom: 5rpx;
 }
 .poster .title{
  display: flex;
  flex-direction: column;
  flex: 2/5;
  padding: 20rpx;
  color: gray;
 }
 .poster .poster_infos{
  display: flex;
  flex-direction: column;
  flex: 3/5;
  padding: 20rpx;
 }
 .transport{
   display: flex;
   flex-direction: column;
   background-color: white;
   padding: 10rpx;
   height: 100rpx;
 }
 .transportSupply{
   display: flex;
   background-color: white;
   padding: 20rpx;
   padding-left: 30rpx;
   height: 40rpx;
 }
 .transportSupply .title{
  color: gray;
  padding-bottom: 10rpx;
 }
 .transportSupply .way{
  padding-left: 20rpx;
 }
 .transport .title{
   color: gray;
   padding-bottom: 10rpx;
   border-bottom: #E0E3DA 1rpx solid;
 }
 .transport .choice{
   display: flex;
 }
 .transport .choice view:nth-of-type(1){
  flex-grow: 1;
 }
 .transport .choice view:nth-of-type(2){
  flex-grow: 1;
 }
 .transport .choice view:nth-of-type(3){
  flex-grow: 1;
 }
 .transport .choice .item{
  display:flex;
  justify-content:center;
  align-items:center;
 }
.footer{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  justify-content: space-around;
  background-color: white;
  align-content: center;
  align-items: center;
}
.footer .total{
  display: flex;
  flex-direction: column;
  width: 50%;
}
.footer .total .price{
  color: red;
}
.footer .action_btn{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 10rpx;
  height: 80%;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
}
.footer .action_btn .btn{
  background-color:#ff3300;
  height: 100%;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.856);
}
.pay{
  display: flex;
  align-items: center;
  justify-content: center;
}
