/* pages/user/poster/poster.wxss */
.request{
  width: 100%;
  height: 600rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.holding{
  width: 100%;
  height: 600rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.holding text{
  font-size: large;
}

.userInfos{
  border: 3px solid #eee;
  width: 100%;
  height: 150rpx;
  background-color: white;
  display: flex;
}
.userInfos .user_Icon{
  border-radius: 50%;
  overflow: hidden;
  width:100rpx;
  height: 100rpx;
  margin-top: 25rpx;
  margin-left: 50rpx;
}
.userInfos .user_NickName{
  margin-left: 50rpx;
  margin-top: 30rpx;
}
.choice{
  width: 100%;
  height: auto;
  background-color: white;
  border-top: 8rpx solid #eee;
}
.choice .item{
  display: flex;
  border: 1rpx solid #eee;
  width: 100%;
  height: 80rpx;
}
.choice .item text{
  flex: 1;
  font-size: 1.1rem;
  margin-left: 35rpx;
  margin-top: 15rpx;
}
.choice .item image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
  margin-right: 35rpx;
}