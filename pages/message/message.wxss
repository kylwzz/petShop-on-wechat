.message{
  background-color: #fff;
  width: 100%;
  height: 2000rpx;
}
.message .sliders{
  height: 600rpx;
  margin: 5rpx;
}
.message .sliders image{
  width: 100%;
  height: 100%;
}
.message .infos .basic_infos{
  display: inline-block;
  width: 100%;
  height: auto;
}
.message .infos .basic_infos .name{
  font-size: large;
  margin-left: 20rpx;
}
.message .infos .basic_infos .price{
  float: right;
  font-size: large;
  margin-right: 20rpx;
  color: red;
}
.message .infos .detail_infos{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.message .infos .detail_infos .title{
  color: gray;
}
.message .infos .detail_infos .transport{
  border-bottom: 2rpx solid #eee;
  margin-bottom: 10rpx;
}
.message .infos .detail_infos .transport image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
  margin-right: 5rpx;
}
.message .infos .detail_infos .service{
  margin-bottom: 20rpx;
}
.posterInfos{
  border: 3px solid #eee;
  width: 100%;
  height: 150rpx;
  background-color: white;
  display: flex;
}
.posterInfos .poster_Icon image{
  border-radius: 50%;
  overflow: hidden;
  width:100rpx;
  height: 100rpx;
  margin-top: 25rpx;
  margin-left: 5rpx;
}
.posterInfos .detailInfos{
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  padding-left: 30rpx;
}
.posterInfos .detailInfos .name{
  margin-top: 15rpx;
}
.message .content{
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  width: 100%;
  height: auto;
  background-color: white;
  display: flex;
  flex-direction: column;
}
.message .content .title{
  display: flex;
  width: 100%;
}
.message .content .title text{
  font-size: large;
  flex: 1;
  margin-left: 15rpx;
}
.message .content .title image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.message .content .item{
  display: flex;
  border-bottom: 1rpx solid #eee;
  height: 110rpx;
}
.message .content .item .icon{
  border-radius: 50%;
  overflow: hidden;
  width:80rpx;
  height: 80rpx;
  margin-top: 5rpx;
  margin-left: 20rpx;
}
.message .content .item .name{
  margin-left: 20rpx;
  font-weight: bold;
}
.message .content .item .contents{
  margin-left: 20rpx;
  font-weight: lighter;
  color: gray;
}
.message .content .item .item_infos .heartScore{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}
.message .content .item .item_infos .heartScore .test{
  display: flex;
  flex-direction: row;
}
.message .content .item .item_infos .heartScore image{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}
.message .recommend{
  padding-top: 10rpx;
  width: 100%;
  height: auto;
  background-color: white;
  display: flex;
  flex-direction: column;
  margin-bottom: 110rpx;
}
.message .recommend .title{
  display: flex;
  width: 100%;
}
.message .recommend .title text{
  font-size: large;
  flex: 1;
  margin-left: 15rpx;
}
.message .recommend .title image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.message .recommend .item{
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.message .recommend .item image{
  width: 200rpx;
  height: 200rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  border-radius: 20rpx;
}
.message .recommend .item .Infos{
  width: 100%;
}
.message .recommend .item .pet_infos{
  height: 50%;
  width: 100%;
  display: flex;
  flex-direction: row;  /*横向*/
  justify-content: space-around; /*主轴居中*/
  align-items: center; /*纵轴居中*/
}
.message .recommend .item .pet_infos .name{
  display: inline-block;
  width: 48%;
  margin-left: 10rpx;
  font-weight: bold;
}
.message .recommend .item .pet_infos .price{
  display: inline-block;
  width: 48%;
  text-align: right;
  margin-right: 10rpx;
  color: red;
  font-weight: bold;
}
.message .recommend .item .poster_infos{
  height: 50%;
  width: 100%;
  flex-direction: row;  /*横向*/
  justify-content: space-around; /*主轴居中*/
  align-items: center; /*纵轴居中*/
}
.message .recommend .item .poster_infos .name{
  display: inline-block;
  width: 48%;
  margin-left: 10rpx;
  font-weight: lighter;
  color: gray;
}
.message .recommend .item .poster_infos .address{
  display: inline-block;
  width: 48%;
  text-align: right;
  margin-right: 10rpx;
  font-weight: lighter;
  color: gray;
}

.goodsaction{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  justify-content: space-around;
  background-color: white;
  align-content: center;
  align-items: center;
}
.logo{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  margin-top: 1rpx;
  margin-left: 10rpx;
}
.logo text{
  font-weight: 700;
}
.goodsaction image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
.goodsaction text{
  width: 80%;
  height: 40%;
  font-size: 16rpx;
  margin-left: 23rpx;
}
.action_btn{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 75%;
  height: 80%;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.btn_right{
  background-color:#ff3300;
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.856);
  border-bottom-right-radius: 50rpx;
  border-top-right-radius: 50rpx;
}
