.message{
  background-color: #fff;
  width: 100%;
  height: auto;
}
.message .sliders{
  height: 600rpx;
  margin: 5rpx;
}
.message .sliders image{
  width: 100%;
  height: 100%;
}
.message .mall_message{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.message .mall_message .name{
  font-weight: bold;
  flex: 1;
}
.message .mall_message .intro{
  font-weight: lighter;
  color: rgb(51, 48, 48);
  flex: 1;
}
.message .mall_message .price{
  font-weight: bold;
  color: red;
  flex: 1;
}
.infos{
  background-color: #fff;
  width: 100%;
  height: auto;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}
.detail_infos{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  display: flex;
  flex-direction: column;
}
.detail_infos .title{
  color: gray;
}
.posterInfos{
  border: 3px solid #eee;
  width: 100%;
  height: 150rpx;
  background-color: white;
  display: flex;
}
.posterInfos .poster_Icon image{
  border-radius: 50%;
  overflow: hidden;
  width:100rpx;
  height: 100rpx;
  margin-top: 25rpx;
  margin-left: 5rpx;
}
.posterInfos .detailInfos{
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  padding-left: 30rpx;
}
.posterInfos .detailInfos .name{
  margin-top: 15rpx;
}
.content{
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  width: 100%;
  height: auto;
  background-color: white;
  display: flex;
  flex-direction: column;
  margin-bottom: 110rpx;
}
.content .title{
  display: flex;
  width: 100%;
}
.content .title text{
  font-size: large;
  flex: 1;
  margin-left: 15rpx;
}
.content .title image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.content .item{
  display: flex;
  border-bottom: 1rpx solid #eee;
  height: 110rpx;
}
.content .item .icon{
  border-radius: 50%;
  overflow: hidden;
  width:80rpx;
  height: 80rpx;
  margin-top: 5rpx;
  margin-left: 20rpx;
}
.content .item .name{
  margin-left: 20rpx;
  font-weight: bold;
}
.content .item .contents{
  margin-left: 20rpx;
  font-weight: lighter;
  color: gray;
}
.content .item .item_infos .heartScore{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}
.content .item .item_infos .heartScore .test{
  display: flex;
  flex-direction: row;
}
.content .item .item_infos .heartScore image{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}

.goodsaction{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  justify-content: space-around;
  background-color: white;
  align-content: center;
  align-items: center;
}
.logo{
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  /* align-content: center; */
  width: 100%;
  height: 70%;
  margin-top: 1rpx;
  margin-left: 10rpx;
}
.goodsaction image{
  width: 55%;
  height: 55%;
  margin-left: 20rpx;
}
.goodsaction text{
  width: 80%;
  height: 40%;
  font-size: 16rpx;
  margin-left: 23rpx;
}
.action_btn{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 75%;
  height: 80%;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.btn_left{
  background-color:#ff9900;
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.856);
  border-bottom-left-radius: 50rpx;
  border-top-left-radius: 50rpx;
}
.btn_right{
  background-color:#ff3300;
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.856);
  border-bottom-right-radius: 50rpx;
  border-top-right-radius: 50rpx;
}

